{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "dev-reload",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "env": {
        "UVICORN_HOST": "127.0.0.1",
        "UVICORN_PORT": "8000",
        "UVICORN_LOG_LEVEL": "debug",
        "UVICORN_RELOAD": "True",
        // "UVICORN_SSL_KEYFILE": "key.pem",
        // "UVICORN_SSL_CERTFILE": "cert.pem",
      },
      "args": [
        "app.main:app"
      ],
      "autoStartBrowser": true,
      "justMyCode": true
    },
  ]
}
